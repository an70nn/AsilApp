<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Aggiungi un rettangolo per rappresentare l'ombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C0C0C0" /> <!-- Colore dell'ombra -->
            <corners android:radius="4dp" /> <!-- Bordo arrotondato, se desiderato -->
        </shape>
    </item>

    <!-- Aggiungi il rettangolo della tabella sopra l'ombra -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Colore dello sfondo della tabella -->
            <corners android:radius="4dp" /> <!-- Bordo arrotondato, se desiderato -->
        </shape>
    </item>

</layer-list>
