<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <GridLayout
        android:id="@+id/Gridlayout_Payments_Records_Dialog_AddExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:columnCount="2"
        android:rowCount="4">

        <!--Riga 1 Titolo -->
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/titolo"
            style="@style/SubtitleText"
            android:layout_column="0"
            android:layout_row="0"/>

        <EditText
            android:id="@+id/EditText_Payments_Records_Dialog_AddExpense_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:importantForAutofill="no" />

        <!--Riga 2 Categoria -->
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/categoria"
            style="@style/SubtitleText"
            android:layout_column="0"
            android:layout_row="1"/>

        <Spinner
            android:id="@+id/Spinner_Payments_Records_Dialog_AddExpense_Category"
            style="@style/CustomSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/category"/>

        <!--Riga 3 Prezzo -->
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/prezzo"
            style="@style/SubtitleText"
            android:layout_column="0"
            android:layout_row="2"/>

        <EditText
            android:id="@+id/EditText_Payments_Records_Dialog_AddExpense_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:minWidth="200dp"/>

        <!--Riga 4 Data -->
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/data"
            style="@style/SubtitleText"
            android:layout_column="0"
            android:layout_row="3"/>

        <EditText
            android:id="@+id/EditText_Payments_Records_Dialog_AddExpense_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"/>
    </GridLayout>

    <Button
        android:id="@+id/Button_Payments_Records_Dialog_AddExpense_SaveRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Gridlayout_Payments_Records_Dialog_AddExpense"
        android:layout_marginHorizontal="10dp"
        android:text="@string/salva"
        android:textAllCaps="true"
        android:background="@drawable/rounded_button"/>
</RelativeLayout>