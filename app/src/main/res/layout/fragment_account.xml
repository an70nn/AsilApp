<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AccountFragment"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/linearContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--blocco nome e cognome GridLayout-->
        <GridLayout
            android:id="@+id/gridLayout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shadow_background"
            android:columnCount="2"
            android:padding="10dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/nomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:text="Nome"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/nomeUtente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:text="nomeDinamico"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/cognomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:text="Cognome"
                android:textSize="20sp"
                android:layout_marginRight="3dp"/>


            <TextView
                android:id="@+id/cognomeUtente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:textSize="20sp"
                android:text="cognomeDinamico" />
        </GridLayout>


        <ImageView
            android:id="@+id/userImageView"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/userimage"
            android:clickable="true"
            app:srcCompat="@drawable/ic_account_circle_black_24dp" />

    </LinearLayout>

    <!-- Altri dettagli dell'utente -->
    <LinearLayout
        android:id="@+id/extraInfoContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Aggiunti nuovi TextView per le informazioni aggiuntive -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/dataDiNascitaTextView"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Data di Nascita"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/dataDiNascitaUtente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="A"
                android:layout_marginBottom="5dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/luogoDiNascitaTextView"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Luogo di Nascita"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/luogoDiNascitaUtente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="B"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/paeseDiNascitaTextView"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Paese di Nascita"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/paeseDiNascitaUtente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/centroDiAccoglienzaTextView"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Centro di Accoglienza"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/centroDiAccoglienzaUtente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="D"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/recapitoTelefonicoTextView"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Recapito Telefonico"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/recapitoTelefonicoUtente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="E"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>