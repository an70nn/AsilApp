<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextView_Doctor_ListPatient_Profile_Fullname"
                style="@style/TitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/nome_cognome" />

            <TextView
                android:id="@+id/TextView_Doctor_ListPatient_Profile_Age"
                style="@style/SubtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/_00_anni" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ImageView_Doctor_ListPatient_Profile_PicUser"
            android:layout_width="47dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_account"
            android:contentDescription="@string/todo" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/TabLayout_Doctor_ProfileSpecificPatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/TabItem_Doctor_ProfileSpecificPatient_Anagrafic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anagrafica" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/TabItem_Doctor_ProfileSpecificPatient_Measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/misurazioni" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/ViewPager_Doctor_ListPatients_Profile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
