<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/TextView_Patient_Mycenter_NameCenter"
        style="@style/TitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/centro_di_accoglienza"/>

    <ImageView
        android:id="@+id/ImageView_Patient_Mycenter_ImageCenter"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingHorizontal="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TextView_Patient_Mycenter_NameCenter"
        android:src="@drawable/center_example"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/LinearLayout_Patient_Mycenter_Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:layout_below="@+id/ImageView_Patient_Mycenter_ImageCenter">

        <TextView
            style="@style/SubSubtitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descrizione"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/TextView_Patient_Mycenter_Description"
                style="@style/SubSubtitleText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:justificationMode="inter_word"
                android:text="@string/lorem_ipsum"
                android:textSize="18sp" />
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/TabLayout_Patient_Mycenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/LinearLayout_Patient_Mycenter_Description">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/TabItem_Patient_Mycenter_Contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contatti" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/TabItem_Patient_Mycenter_Rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/regolamento" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/ViewPager_Patient_Mycenter"
        android:layout_below="@+id/TabLayout_Patient_Mycenter"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FloatingActionButton_Patient_Mycenter_Callcenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/ViewPager_Patient_Mycenter"
        android:src="@android:drawable/stat_sys_phone_call"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/todo" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FloatingActionButton_Patient_Mycenter_Ratingcenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ViewPager_Patient_Mycenter"
        android:src="@drawable/baseline_star_24"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/todo" />
</RelativeLayout>