<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:background="@color/primary_background"
        android:padding="10dp"
        android:elevation="6dp">

        <!-- Riga 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SubSubtitleText"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Email:"/>

            <TextView
                style="@style/SubSubtitleText"
                android:id="@+id/TextView_Patient_Mycenter_Contacts_Item_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="centroaccglienza@test.com"/>
        </LinearLayout>

        <!-- Riga 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SubSubtitleText"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Telefono:" />

            <TextView
                style="@style/SubSubtitleText"
                android:id="@+id/TextView_Patient_Mycenter_Contacts_Item_Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+39.333.000.11.22"/>
        </LinearLayout>

        <!-- Riga 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SubSubtitleText"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Indirizzo:"/>

            <TextView
                style="@style/SubSubtitleText"
                android:id="@+id/TextView_Patient_Mycenter_Contacts_Item_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via della Lode, 30"/>
        </LinearLayout>

        <!-- Riga 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SubSubtitleText"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="CittÃ :"/>

            <TextView
                style="@style/SubSubtitleText"
                android:id="@+id/TextView_Patient_Mycenter_Contacts_Item_City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bari"/>
        </LinearLayout>

        <!-- Riga 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SubSubtitleText"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Provincia:"/>

            <TextView
                style="@style/SubSubtitleText"
                android:id="@+id/TextView_Patient_Mycenter_Contacts_Item_Province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BA"/>
        </LinearLayout>

        <!-- Riga 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SubSubtitleText"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Regione:"/>

            <TextView
                style="@style/SubSubtitleText"
                android:id="@+id/TextView_Patient_Mycenter_Contacts_Item_Region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puglia"/>
        </LinearLayout>

        <!-- Riga 7 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SubSubtitleText"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/orario_di_apertura"/>

            <TextView
                style="@style/SubSubtitleText"
                android:id="@+id/TextView_Patient_Mycenter_Contacts_Item_TimeOpening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dalle 09:00 alle 20:00"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
