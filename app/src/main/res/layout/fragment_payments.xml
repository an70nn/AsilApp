<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.PaymentsRecords">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/TabLayout_Payments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/TabItem_Payments_Records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pagamenti" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/TabItem_Payments_Reports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_pagamenti" />
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/ViewPager_Payments_Fragments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</FrameLayout>