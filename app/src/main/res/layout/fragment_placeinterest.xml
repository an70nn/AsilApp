<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/MapView_Patient_PlaceofInterest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#999"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp">

        <ImageButton
            android:id="@+id/ImageButton_Patient_PlaceofInterest_ZoomIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zoom_in_64"
            android:padding="5dp"
            android:background="@drawable/imagebutton_rounded_trasparant_maps" />


        <ImageButton
            android:id="@+id/ImageButton_Patient_PlaceofInterest_ZoomOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/zoom_out_64"
            android:padding="5dp"
            android:background="@drawable/imagebutton_rounded_trasparant_maps"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ImageButton_Patient_PlaceofInterest_Clinic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ambulance_64"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/imagebutton_rounded_trasparant_maps"/>

            <ImageButton
                android:id="@+id/ImageButton_Patient_PlaceofInterest_TownHall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bank_64"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/imagebutton_rounded_trasparant_maps" />

            <ImageButton
                android:id="@+id/ImageButton_Patient_PlaceofInterest_PostOffice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/post_office_64"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/imagebutton_rounded_trasparant_maps" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/ImageButton_Patient_PlaceofInterest_PlacesWorship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/church_64"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/imagebutton_rounded_trasparant_maps"/>

            <ImageButton
                android:id="@+id/ImageButton_Patient_PlaceofInterest_LanguageSchool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/school_64"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/imagebutton_rounded_trasparant_maps" />

            <ImageButton
                android:id="@+id/ImageButton_Patient_PlaceofInterest_Pharmacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pharmacy_64"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/imagebutton_rounded_trasparant_maps" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
