<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/ui_background">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ShapeableImageView_Profile_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginVertical="10dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_account"
                android:background="@drawable/rounded_pic"/>
        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:columnCount="2"
            android:rowCount="9">

            <!-- Riga 0 (Nome) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nome"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="0"/>

            <TextView
                android:id="@+id/TextView_Profile_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/nome"
                android:textAlignment="viewEnd"
                android:textSize="20sp"
                android:layout_column="1"
                android:layout_row="0" />

            <!-- Riga 1 (Cognome) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cognome"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="1"/>

            <TextView
                android:id="@+id/TextView_Profile_Surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cognome"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:layout_column="1"
                android:layout_row="1"/>

            <!-- Riga 2 (Genere) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/genere"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="2"/>

            <TextView
                android:id="@+id/TextView_Profile_Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/genere"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:layout_column="1"
                android:layout_row="2"/>

            <!-- Riga 4 (Luogo di nascita) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/luogo_di_nascita"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="3"/>

            <TextView
                android:id="@+id/TextView_Profile_Birthplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/luogo_di_nascita"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:layout_column="1"
                android:layout_row="3"/>

            <!-- Riga 5 (Data di nascita) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_di_nascita"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="4"/>

            <TextView
                android:id="@+id/TextView_Profile_Birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_di_nascita"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:layout_column="1"
                android:layout_row="4"/>

            <!-- Riga 5 (NazionalitÃ ) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paese"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="5"/>

            <TextView
                android:id="@+id/TextView_Profile_Country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paese"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:layout_column="1"
                android:layout_row="5"/>

            <!-- Riga 6 (Recapito telefonico) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cellulare"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="6"/>

            <TextView
                android:id="@+id/TextView_Profile_Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cellulare"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:layout_column="1"
                android:layout_row="6"/>

            <!-- Riga 7 (Email) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="7"/>

            <TextView
                android:id="@+id/TextView_Profile_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:layout_column="1"
                android:layout_row="7"/>

            <!-- Riga 8 (Password) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="8"/>

            <TextView
                android:id="@+id/TextView_Profile_Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:layout_column="1"
                android:layout_row="8"/>
        </GridLayout>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/MaterialCardView_Profile_Editprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:contentPadding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/modifica_il_profilo"
                android:textStyle="bold"
                android:textColor="@color/ui_background"
                android:textSize="20sp"
                android:drawablePadding="10dp"
                app:drawableStartCompat="@drawable/baseline_contact_page_24"
                app:drawableEndCompat="@drawable/baseline_navigate_next_24" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/MaterialCardView_Profile_Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:contentPadding="10dp">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/disconnettiti"
                android:textStyle="bold"
                android:textColor="@color/ui_background"
                android:textSize="20sp"
                android:drawablePadding="10dp"
                app:drawableStartCompat="@drawable/baseline_logout_24"
                app:drawableEndCompat="@drawable/baseline_navigate_next_24" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/MaterialCardView_Profile_Deleteprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:contentPadding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/elimina_il_profilo"
                android:textStyle="bold"
                android:textColor="@color/ui_background"
                android:textSize="20sp"
                android:drawablePadding="10dp"
                app:drawableStartCompat="@drawable/baseline_delete_24"
                app:drawableEndCompat="@drawable/baseline_navigate_next_24" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>