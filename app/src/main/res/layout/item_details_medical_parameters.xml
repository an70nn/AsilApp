<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:paddingHorizontal="10dp"
        android:background="@drawable/border_stroke">

        <!-- Riga 0 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/misurato"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="0"/>

        <TextView
            android:id="@+id/TextView_Health_Nested_TextView_Item_MeasurementDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="end"
            android:text="@string/_01_05"
            android:textStyle="bold"
            android:textAlignment="viewEnd"
            android:textSize="24sp" />

        <!-- Riga 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alle_ore"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="1"/>

        <TextView
            android:id="@+id/TextView_Health_Nested_TextView_Item_MeasurementTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_10_30"
            android:textStyle="bold"
            android:textAlignment="viewEnd"
            android:layout_gravity="end"
            android:textSize="24sp"
            android:layout_column="1"
            android:layout_row="1"/>

        <!-- Riga 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ultimo_valore"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="2"/>

        <TextView
            android:id="@+id/TextView_Health_Nested_TextView_Item_MeasurementLastValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_70_90"
            android:textStyle="bold"
            android:textAlignment="viewEnd"
            android:layout_gravity="end"
            android:textSize="24sp"
            android:layout_column="1"
            android:layout_row="2"/>
    </GridLayout>
</androidx.cardview.widget.CardView>