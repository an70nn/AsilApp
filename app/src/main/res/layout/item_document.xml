<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_Patient_Mymedia_Document_Item"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/rounded_relative_layout"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/ImageView_Patient_Mymedia_Document_Item_ImagePdf"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="15dp"
        android:src="@drawable/pdf_64"/>

    <TextView
        android:id="@+id/TextView_Patient_Mymedia_Document_Item_NameDocument"
        style="@style/SubtitleText"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="9dp"
        android:layout_toStartOf="@+id/ImageView_Patient_Mymedia_Document_Item_SharePdf"
        android:layout_toEndOf="@+id/ImageView_Patient_Mymedia_Document_Item_ImagePdf"
        android:gravity="center_vertical"
        android:justificationMode="inter_word"
        android:text="@string/pdf_file_name"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/ImageView_Patient_Mymedia_Document_Item_SharePdf"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:src="@drawable/baseline_share_32" />

</RelativeLayout>